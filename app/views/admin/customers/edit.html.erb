<%= form_with model: @customer, url: edit_admin_customer_path, method: :patch do |f| %>
<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

<div class="form-group">
  <%= f.label :id, '会員ID' %>
  <%= @customer.id %>
</div>
<div class="form-group">
  <%= f.label :last_name, '氏名' %>
  <%= f.text_field :last_name, class: 'form-control' %>
  <%= f.text_field :first_name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :last_name_kana, 'フリガナ' %>
  <%= f.text_field :last_name_kana, class: 'form-control' %>
  <%= f.text_field :first_name_kana, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :postal_code, '郵便番号' %>
  <%= f.text_field :postal_code, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :address, class: 'form-control' %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :telephone_number, '電話番号' %>
  <%= f.telephone_field :telephon_nunber, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :is_deleted, '会員ステータス' %>
  <%= f.radio_button :is_deleted, '有効' %>
  <%= f.label :is_deleted, true %>
  <%= f.radio_button :is_deleted, '退会' %>
  <%= f.label :is_deleted, false %>
</div>
<div class="form-group" >
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
</div>
<% end %>