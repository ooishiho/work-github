<h1>○○さんの会員情報編集</h1>
<%= form_with model: @customer do |f| %>

<div class="form-group">
  <%= f.label :id, '会員ID' %>
  <%= customer.id %>
</div>
<div class="form-group">
  <%= f.text_field :last_name, class: 'form-control' %>
  <%= f.text_field :first_name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :last_name_kana :first_name_kana, 'フリガナ' %>
  <%= f.text_field :last_name_kana, class: 'form-control' %>
  <%= f.text_field :first_name_kana, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :postal_code, '郵便番号' %>
  <%= f.text_field :postal_code, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :address, class: 'form-control' %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :telephone_number, '電話番号' %>
  <%= f.telephone_field :telephone_number, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :is_deleted, '会員ステータス' %>

</div>
<div class="form-group" >
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
</div>
<% end %>