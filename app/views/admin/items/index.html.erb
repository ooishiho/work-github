<h1>商品一覧</h1>
<button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">
 <%= link_to "+" , new_admin_item_path %>
</button>

<table class="table">
 <thead>
    <tr>
    <th scope="col">商品ID</th>
    <th scope="col">商品名</th>
    <th scope="col">税抜価格</th>
    <th scope="col">ジャンル</th>
    <th scope="col">ステータス</th>
    </tr>
 </thead>
 <tbody>
<% @items.each do |item| %>
  <tr>
    <td scope="row"><%= item.id %></td>
    <td scope="row"><%= link_to item.name, edit_admin_item_path(item.id) %></td>
    <td scope="row"><%= item.price %>円</td>
    <td scope="row"><%= item.genre.name %></td>
    <td scope="row">
      <% if item.is_active == true %>
      販売中
      <% else %>
      販売停止中
      <% end %>
      </td>
  </tr>
<% end %>
 </tbody>
</table>
<%= paginate @items %>