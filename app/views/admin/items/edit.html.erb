<h1>商品編集</h1>
<%= form_with model: @item do |f| %>

<p>商品画像</p>
<%= f.file_field :image, accept: "image/*" %>
<div class="form-group">
  <%= f.label :name, '商品名' %>
  <%= f.text_field :name, class: 'form-gontrol' %>
</div>
<div class="form-group">
  <%= f.label :introduction, '商品説明' %>
  <%= f.text_field :introduction, class: 'form-gontrol' %>
</div>
<div class="form-group">
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select :genre_id, @genres, :id, :name  %>
</div>
<div class="form-group">
  <%= f.label :price, '税抜価格' %>
  <%= f.number_field :price, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.submit '新規登録', class: 'btn btn-success' %>
</div>
<% end %>
<div>
<%= form_with(model: user) do |form| %>
<div class="form_control">
<%= form.label :is_active, class: 'form_item_label' %>
<% Item.all.each do |item| %>
<label><%= form.radio_button(:is_active, item.id) %><%= active.name %></label>
<% end %>
</div>
</div>