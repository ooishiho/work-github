<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

<div class="form-group">
  <%= f.label :item_image, '商品画像' %>
  <%= f.file_field :image, accept: "image/*", class:'form-control' %>
</div>
<div class="form-group">
  <%= f.label :name, '商品名' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :introduction, '商品説明' %>
  <%= f.text_field :introduction, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
</div>
<div class="form-group">
  <%= f.label :price, '税抜価格' %>
  <%= f.number_field :price, class: 'form-control' %>
</div>
<div>
<p>販売ステータス</p>
 <%= f.radio_button :is_active, true %>
 <%= f.label :is_active, '販売中' %>
 <%= f.radio_button :is_active, true %>
 <%= f.label :is_active, '販売停止中' %>
</div>
<div class="form-group">
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
</div>
<% end %>