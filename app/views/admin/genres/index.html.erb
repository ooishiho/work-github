<h1>ジャンル一覧・追加</h1>

<p>ジャンル名</p>
<%= form_with model: Genre.new , url: genres_path, method: :post do |f| %>
   <div class="form-group">
    <%= f.label :name, 'ジャンル名' %>
    <%= f.text_field :name, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.submit '新規登録', class: 'btn btn-success' %>
   </div>
<% end %>
<p>ジャンル</p>
<table class="table ">
<thead>
<tr>
<th>ジャンル</th>
<th></th>
</tr>
</thead>
<tbody>
<% @genres.each do |genre| %>
<tr>
<td><%= genre.name %></td>
<td><%= f.submit '編集する', class: 'btn btn-success' %></td>
</tr>
<% end %>
</tbody>
</table>