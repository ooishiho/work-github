<h1>ジャンル一覧・追加</h1>

<%= form_with model: Genre.new , url: admin_genres_path, method: :post do |f| %>
   <div class="form-group">
    <%= f.label :name, 'ジャンル名' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "ジャンル名" %>
   </div>
   <div class="form-group">
     <%= f.submit '新規登録', class: 'btn btn-success' %>
   </div>
<% end %>
<table class="table ">
<thead>
<tr>
<th>ジャンル</th>
<th></th>
</tr>
</thead>
<tbody>
<% @genres.each do |genre| %>
<tr>
<td><%= genre.name %></td>
<td></td>
</tr>
<% end %>
</tbody>
</table>