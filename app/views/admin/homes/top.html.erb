<h1>注文履歴一覧</h1>
<table class="table">
 <thead>
   <tr>
    <th scope="col">購入日時</th>
    <th scope="col">購入者</th>
    <th scope="col">注文個数</th>
    <th scope="col">注文ステータス</th>
   </tr>
 </thead>
 <tbody>
 <% @orders.each do |order| %>
  <tr>
   <td scope="row"><%= link_to   order.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_order_path(order.id) %></td>
   <td scope="row"><%= order.name %></td>
   <td scope="row"><%= order.order_details.sum(:amount) %></td>
   <td scope="row"><%= order.status_i18n %></td>
  </tr>
 <% end %>
 </tbody>
</table>
