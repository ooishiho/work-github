<h1>注文履歴一覧</h1>
<table class="table">
 <thead>
  <tr>
   <th scope="col">注文日</th>
   <th scope="col">配送先</th>
   <th scope="col">注文商品</th>
   <th scope="col">支払金額</th>
   <th scope="col">ステータス</th>
   <th scope="col">注文詳細</th>
  </tr>
 </thead>
 <tbody>
<% @orders.each do |order| %>
  <tr>
   <td scope="row"><%= l order.created_at %></td>
   <td scope="row">
   〒<%= order.postal_code %></br>
   <%= order.address %></br>
   <%= order.name %>
   </td>
   <td scope="row">
    <% order.items.each do |item| %>
    <p><%= item.name %></p>
    <% end %>
   </td>
   <td scope="row"><%= order.total_payment %>円</td>
   <td scope="row"><%= order.status_i18n %></td>
   <td scope="row"><%= link_to '表示する', public_order_path(order.id), class: 'btn btn-cd success' %></td>
  </tr>
<% end %>
 </tbody>
</table>