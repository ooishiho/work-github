<h1>商品一覧(全<%= @item_all.count %> 件)</h1>
<div class="row">
 <% @items.each do |item| %>
 <div class="col-md-3">
   <%= link_to public_item_path(item.id)  do %>
   <%= image_tag item.get_item_image(200,200) %>
   <% end %>
   <p><%= item.name %></p>
   <p>¥<%= (item.price * 1.1).floor %></p>
 </div>
 <% end %>
</div>
<%= paginate @items %>